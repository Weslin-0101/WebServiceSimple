{
    "env": {
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "standard",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "arrow-body-style": "off",
      "prefer-arrow-callback": "off"
    },
    "settings": {
      "import/extensions": [
        ".mjs",
        ".js"
      ],
      "import/resolver": {
        "node": {
          "extensions": [
            ".mjs",
            ".js"
          ]
        }
      }
    }
  }
